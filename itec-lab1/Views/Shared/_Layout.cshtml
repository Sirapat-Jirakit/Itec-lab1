        <div>
            <ul class="nav nav-tabs tab-primary bg-primary p-1" id="bg" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" href="@Url.Action("Config", "Home")">Config</a>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="reviews-tab" data-bs-toggle="tab"
                            data-bs-target="#reviews-tab-pane" type="button" role="tab" aria-controls="reviews-tab-pane"
                            aria-selected="false">
                        <i class="ti ti-star pe-1 ps-1"></i>reviews
                    </button>
                </li>
                <li class="nav-item ms-auto">
                    <button class="nav-link" type="button" data-bs-toggle="modal" data-bs-target="#loginModal">
